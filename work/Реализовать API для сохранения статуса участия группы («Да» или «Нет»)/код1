const express = require('express');
const bodyParser = require('body-parser');

const app = express();
const PORT = 3000;

// для JSON тела
app.use(bodyParser.json()); // заполняет req.body 

// временное "хранилище" в памяти
const groupParticipation = {}; 
// структура: { [groupId]: "yes" | "no" }

app.post('/api/groups/:groupId/participation', (req, res) => {
  const { groupId } = req.params;
  const { status } = req.body; // читаем статус из тела 

  if (!['yes', 'no'].includes(status)) {
    return res.status(400).json({ error: 'Статус должен быть "yes" или "no"' }); // 400 Bad Request
  }

  const isNew = !groupParticipation[groupId];
  groupParticipation[groupId] = status;

  return res
    .status(isNew ? 201 : 200) // 201 Created для нового, 200 OK для обновления 
    .json({
      groupId,
      status,
    });
});

// запуск сервера
app.listen(PORT, () => {
  console.log(`Server listening on port ${PORT}`); // стандартный запуск Express 
});
