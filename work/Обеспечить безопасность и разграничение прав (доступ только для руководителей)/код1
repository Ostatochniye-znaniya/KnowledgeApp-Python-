// например после декодирования JWT в req.user лежит { id, role: 'leader' | 'student' | ... }

// универсальное middleware для проверки роли
function requireRole(allowedRoles = []) {
  return (req, res, next) => {
    const user = req.user; // должен быть установлен auth-middleware

    if (!user) {
      return res.status(401).json({ error: 'Unauthorized' }); // нет пользователя
    }

    if (!allowedRoles.includes(user.role)) {
      return res.status(403).json({ error: 'Forbidden' }); // нет прав 
    }

    next();
  };
}
